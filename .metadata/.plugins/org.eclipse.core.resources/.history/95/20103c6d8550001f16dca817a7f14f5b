package com.techlabs.creational.decorator.model;

public class HatDecorator implements IHat {
	private IHat hatobj;

	// Constructor that initializes the hatobj
	public HatDecorator(IHat hat) {
		this.hatobj = hat;
	}

	public String getName() {
		{
			return hatobj.getName(hatobj);
		}

	}

	public String getDescription() {

		return hatobj.getDescription(hatobj);
	}

	public int getPrice() {

		return hatobj.getPrice(hatobj);
	}

}
